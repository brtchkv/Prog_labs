<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.Controllers.SkeletonRegister">
  <children>
    <MenuBar prefHeight="16.0" prefWidth="376.0" VBox.vgrow="ALWAYS">
      <menus>
            <Menu mnemonicParsing="false" text="%login">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#loginWindow" text="%login" />
               </items></Menu>
            <Menu mnemonicParsing="false" text="%language">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#language1" text="Русский" />
                    <MenuItem mnemonicParsing="false" onAction="#language2" text="English (Canada)" />
                    <MenuItem mnemonicParsing="false" onAction="#language3" text="Česky" />
                    <MenuItem mnemonicParsing="false" onAction="#language4" text="Polski" />
                </items>
            </Menu>
        <Menu mnemonicParsing="false" text="%help">
          <items>
            <MenuItem mnemonicParsing="false" onAction="#showHelp" text="%about" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
    <AnchorPane maxHeight="-1.0" maxWidth="-1.0" VBox.vgrow="ALWAYS">
      <children>
            <BorderPane layoutX="3.0" prefHeight="379.0" prefWidth="363.0">
               <center>
                  <ImageView fitHeight="396.0" fitWidth="370.0" pickOnBounds="true" preserveRatio="true" x="232.0" y="22.0" BorderPane.alignment="CENTER">
                     <image>
                        <Image url="@new.png" />
                     </image>
                     <viewport>
                        <Rectangle2D />
                     </viewport>
                  </ImageView>
               </center></BorderPane>
            <Label alignment="CENTER" layoutX="115.0" layoutY="106.0" prefHeight="38.0" prefWidth="145.0" scaleX="2.0" scaleY="2.0" scaleZ="2.0" text="%register" textAlignment="CENTER" textFill="WHITE" wrapText="true">
               <effect>
                  <DropShadow blurType="GAUSSIAN" />
               </effect>
               <font>
                  <Font size="17.0" />
               </font>
            </Label>
            <TextField fx:id="nick" layoutX="105.0" layoutY="163.0" promptText="%nickname">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets></TextField>
            <TextField fx:id="email" layoutX="105.0" layoutY="209.0" promptText="%email" />
            <AmbientLight color="CHARTREUSE" lightOn="true" />
            <Button cancelButton="true" layoutX="105.0" layoutY="259.0" mnemonicParsing="false" onAction="#clear" prefHeight="23.0" prefWidth="72.0" style="-fx-background-color: rgba(0,0,0,0.08),         linear-gradient(#9a9a9a, #909090),         linear-gradient(white 0%, #f3f3f3 50%, #ececec 51%, #f2f2f2 100%); -fx-background-radius: 5,5,4; -fx-text-fill: #242d35; -fx-font-size: 12px;" text="%clear" textFill="#da1c1c" />
            <Button defaultButton="true" layoutX="200.0" layoutY="259.0" mnemonicParsing="false" onAction="#register" prefHeight="23.0" prefWidth="72.0" style="-fx-background-color: rgba(0,0,0,0.08),         linear-gradient(#5a61af, #51536d),         linear-gradient(#e4fbff 0%,#cee6fb 10%, #a5d3fb 50%, #88c6fb 51%, #d5faff 100%); -fx-background-radius: 5,5,4; -fx-text-fill: #242d35; -fx-font-size: 12px;" text="%submit" textFill="#367c05" />
        </children>
         <cursor>
            <Cursor fx:constant="DEFAULT" />
         </cursor>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets />
         </VBox.margin>
    </AnchorPane>
  </children>
</VBox>
